{% extends '@SonataAdmin/standard_layout.html.twig' %}
{% block content %}
    <div class="row">
            <div class="col-lg-12">
                <form method="post" action="{{ path('pushRecurente_create') }}">

                                    <div class="row">
                                        <div class="col-lg-12">
                                            <label for="client">objet</label>
                                            <input type="text" class="form-control" name="object"/>
                                        </div>
                                        <div class="col-lg-12">
                                            <label for="client">message</label>
                                            <textarea class="form-control" name="content" rows="4" cols="50"></textarea>
                                            <input type="hidden" name="type" value="single"/>

                                        </div>
                                         <div class="col-lg-12">
                                            <label for="client">heure</label>
                                            <input type="time" class="form-control" name="hours"/>
                                        </div>
                                        <div class="col-lg-12">
                                            <label for="client">jours</label>
                                            {% for key,day in days %}
                                        {{ key }} <input value="{{ day }}"  type="checkbox" class="form1 icheckbox_minimal-blue"  name="days[]"/>

                                            {% endfor %}
                                        </div>
                                    </div>
                                        <div class="modal-footer">
                                            <button type="submit" class="btn btn-primary">valider</button>
                                            <button type="cancel" class="btn btn-secondary">annuler</button>

                                        </div>

                                    </form>
    </div>
    </div>
                <script src="https://cdn.tiny.cloud/1/b1vn4k1g19j3jmlw5mt6xd6hfp9kzc4do1vs630t6jyzf7kx/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
                <script>
                    tinymce.init({
                        selector: 'textarea',
                        plugins: "emoticons",
                        max_chars: 30,
                        toolbar: "emoticons",
                        toolbar_location: "bottom",
                        entity_encoding : "raw"
                    });
                </script>

{% endblock %}
