{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <style>

        .login-box, .register-box {
            margin: 7% auto;
            width: 360px;
        }
        .login-box-msg {
            font-size: 18px;
            margin: 0;
            text-align: center;
            padding: 30px 0 20px;
            text-transform: uppercase;
            color: black;
            font-weight: 600;
        }
        .login-box-body{
            background: transparent;
        }
        .form-group.has-feedback .form-control {
            border-radius: 20px !important;
        }
        .login-page{
            /*background-image: url('/images/bgAdmin.png') !important;*/
            background-size: cover;
            background-position: center;
            height: auto;
            min-height: 100%;
        }
        button.btn.btn-primary.btn-block.btn-flat {
            background-color: #ffd101 !important;
            border-color: #ffd101 !important;
            color: #151b34 !important;
            border-radius: 25px !important;
            font-weight: bold !important;
            font-size: small !important;
            text-transform: uppercase !important;
            width: max-content !important;
            margin: auto;
        }
    </style>
    <div class="login-box">
        <div class="login-logo">
            <a href="/admin/dashboard">
                <div class="text-center">
                    <img style="width:125px;" src="{{ asset('images/logo.png') }}" alt="Administration Toog">
                </div>
                <p class="login-box-msg">ESPACE ADMIN</p>
            </a>
        </div>
        <form  method="post" class="login-box-body">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            <div class="form-group has-feedback">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>

            </div>
            <div class="form-group has-feedback">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
            </div>
            <div class="row">

                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-primary p-2  btn-block btn-flat">Connexion</button>
                </div>
            </div>

        </form>
    </div>
{% endblock %}
